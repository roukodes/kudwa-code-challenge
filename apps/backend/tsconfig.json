{
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "ESNext",
    "lib": ["ESNext"],
    "baseUrl": "./",
    "paths": {
      "@/*": ["src/*"],
      "@data/*": ["data/*"]
    },
    "resolveJsonModule": true,
    "esModuleInterop": true
  },
  "ts-node": {
    "require": ["tsconfig-paths/register"]
  }
}
